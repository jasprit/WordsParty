<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorGreyDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="BlueTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/book</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="SplashTheme" parent="BlueTheme">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>


</resources>